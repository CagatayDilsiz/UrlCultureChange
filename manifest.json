{
    "name": "Culture Change",
    "description": "Change culture of Web Sites such as /fr-fr/ to /en-us/ extension for Microsoft Edge, Chrome",
    "version": "1.3",
    "manifest_version": 2,
    "author": "Çağatay Dilsiz",
    "permissions": [
        "tabs",
        "storage"
    ],
    "browser_action": {
        "default_popup": "culture.html",
        "default_icon": {            
            "40" :"cultureChange_40.png", 
            "48": "cultureChange_48.png"
        }
    },
    "icons" :{
        "20" : "cultureChange_40.png",
        "16" : "cultureChange_16.png",
        "64": "cultureChange_64.png",
        "128": "cultureChange_128.png"
    }
}

